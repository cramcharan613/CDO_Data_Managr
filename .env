# Environment Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Application Configuration
VITE_APP_NAME="Low Code D"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="A comprehensive low-code data visualization and workflow management platform"

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_VERSION=v1

# External Services
VITE_ANALYTICS_ID=demo-analytics-id
VITE_SENTRY_DSN=demo-sentry-dsn
VITE_FEATURE_FLAGS=analytics,monitoring,optimization

# CDN Configuration
VITE_CDN_BASE_URL=https://cdn.example.com
VITE_ASSETS_BASE_URL=https://assets.example.com

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_BUNDLE_ANALYZER=false
VITE_SOURCE_MAPS=true

# Security
VITE_CSRF_PROTECTION=true
VITE_CONTENT_SECURITY_POLICY=strict

# Development Settings
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true
VITE_STRICT_MODE=true